<Window x:Class="NotionNetWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NotionNetWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <TextBox  Grid.Column="1" HorizontalAlignment="Left" x:Name="txtUname" Height="23"  TextWrapping="Wrap" VerticalAlignment="Center" Width="120"/>
        <Label Content="UserName:" Grid.Column="0" HorizontalAlignment="Right"  VerticalAlignment="Center"/>
        <Label Content="Password:" Grid.Column="2" HorizontalAlignment="Right"  VerticalAlignment="Center"/>
        <PasswordBox Width="100" Grid.Column="3" HorizontalAlignment="Left"  VerticalAlignment="Center"/>
        <Button Content="Login" Margin="0,0,0,30" Grid.Column="1" Name="btnSubmit" VerticalAlignment="Bottom"  Width="75" Click="btnSubmit_Click"/>



    </Grid>
</Window>
